{% extends 'layout.html.twig' %}

{% block page_title %}
    Box-details Administration
{% endblock %}


{% block content %}

    <div class="row">
        <div class="col-md-3">
            {{ render(controller('App\\Controller\\ComponentsController::sidenav')) }}
        </div>
        <div class="col-md-9">
            <div class="profile-content">
                <div class="row">
                    <div class="col-md-10 offset-md-1">
                        <!-- News jumbotron -->
                        <div class="jumbotron text-center hoverable p-4">

                            <!-- Grid row -->
                            <div class="row">

                                <!-- Grid column -->
                                <div class="col-md-4 offset-md-1 mx-3 my-3">

                                    <!-- Featured image -->
                                    <div class="view overlay">
                                        <img src="{{ asset('images/box/'~box.image) }}" class="img-fluid" alt="{{ box.name }}">
                                        <a>
                                            <div class="mask rgba-white-slight"></div>
                                        </a>
                                    </div>

                                </div>
                                <!-- Grid column -->

                                <!-- Grid column -->
                                <div class="col-md-7 text-md-left ml-3 mt-3">

                                    <!-- Excerpt -->
                                    <a href="#" class="green-text">
                                        <h6 class="h6 pb-1"><i class="fa fa-desktop pr-1"></i> Sutekina Box</h6>
                                    </a>

                                    <h4 class="h4 mb-4">This is title of the news</h4>


                                    <span>
                                        <span class="h6 pb-1">Prix :</span>
                                        <span class="font-weight-normal green-text"><strong>{{ box.price }} â‚¬</strong></span>
                                    </span>
                                    <p class="font-weight-normal">{{ box.description }}</p>

                                    {% if is_granted('ROLE_ALLOWED_TO_SWITCH') %}
                                        <a href="{{ path('admin.gestion.box.update', {
                                            'id' : box.id
                                        }) }}" class="btn btn-success">
                                            <strong>Modifier</strong>
                                        </a>
                                    {% endif %}

                                </div>
                                <!-- Grid column -->

                            </div>
                            <!-- Grid row -->

                        </div>
                        <!-- News jumbotron -->
                    </div>
                </div>
                {#{% include '_components/_listeProducts.html.twig' %}#}
            </div>
        </div>
    </div>

{% endblock %}


